<table class="admin projects list">
	<thead>
		<th class="fixed_name"><?= l('name') ?></th>
		<th class="fixed_author"><?= l('author') ?></th>
		<th class="fixed_version"><?= l('version') ?></th>
		<th class="w-48 text-right"><?= l('actions') ?></th>
	</thead>
	<tbody>
		<?php foreach ($plugins as $plugin) : ?>
			<tr>
				<td><?= $plugin['name'] ?></td>
				<td><?= $plugin['author'] ? $plugin['author'] : '' ?></td>
				<td><?= $plugin['version'] ?></td>
				<td>
					<div class=" btn-group justify-end">
						<?php if ($plugin['installed'] and $plugin['enabled']) {
							echo HTML::link(l('disable'), "/admin/plugins/disable/{$plugin['file']}", ['class' => 'btn-warning', 'icon' => 'fas fa-fw fa-plug-circle-minus', 'sr-only' => true, 'title' => l('disable')]);
						} elseif ($plugin['installed'] and !$plugin['enabled']) {
							echo HTML::link(l('enable'), "/admin/plugins/enable/{$plugin['file']}", ['class' => 'btn-success', 'icon' => 'fas fa-fw fa-plug-circle-plus', 'sr-only' => true, 'title' => l('enable')]);
						} ?>
						<?php if ($plugin['installed']) {
							echo HTML::link(l('uninstall'), "/admin/plugins/uninstall/{$plugin['file']}", ['class' => 'btn-danger', 'icon' => 'fas fa-fw fa-plug-circle-xmark', 'sr-only' => true, 'title' => l('uninstall')]);
						} else {
							echo HTML::link(l('install'), "/admin/plugins/install/{$plugin['file']}", ['class' => 'btn-success', 'icon' => 'fas fa-fw fa-plug-circle-bolt', 'sr-only' => true, 'title' => l('install')]);
						} ?>
					</div>
				</td>
			</tr>
		<?php endforeach; ?>
	</tbody>
</table>
